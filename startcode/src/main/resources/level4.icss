// this is a comment
BaseWidth := 200px;
BaseHeight := 100px;
Divisor := 3;
UseCustom := TRUE;
PrimaryColor := #336699;

/*
this
is
also
a
comment
  */

header {
    background-color: PrimaryColor;
    width: BaseWidth * 5;  // 1000px
    height: BaseHeight / Divisor;  // 50px using division
}


/* one line with multiline comment annotation */

#content {
    // Calculate content dimensions
    ContentWidth := BaseWidth * 4;  // 800px
    ContentPadding := 40px;

    width: ContentWidth + ContentPadding / Divisor;  // 800px + 20px = 820px
    height: BaseHeight * 6 / Divisor + 50px;  // 300px + 50px = 350px
    background-color: #ffffff;
}

