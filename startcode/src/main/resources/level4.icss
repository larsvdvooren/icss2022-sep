/*
// nested comment
*/

.button {
    ButtonWidth := BaseWidth / Divisor + 50px;  // 150px
    ButtonHeight := BaseHeight / 2;  // 50px

    width: ButtonWidth;
    height: ButtonHeight;

    if[UseCustom] {
        background-color: PrimaryColor;
        color: #ffffff;
    }
    else {
        background-color: #cccccc;
        color: #000000;
    }
}